<%- include('../includes/head.ejs') %>  
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/form.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <form action="/admin/product" method="POST">
            <label>Title</label>
            <br>
            <input type="text" name="title" placeholder="Quantum Theory Book">
            <br>
            <label>Price</label>
            <br>
            <input type="number" step="0.01" min="0" name="price" placeholder="19.99" required>
            <br>
            <label>Description</label>
            <br>
            <textarea name="description" placeholder="Edition : 2019, written by ..." rows = "5" id="description"></textarea>
            <br>
            <label>Image URL</label>
            <br>
            <input type="text" name="imageURL" placeholder="url of image" required>
            <br>
            <button type="submit">Add product</button>
        </form>
    </main>

<%- include('../includes/end.ejs') %>