<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/form.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
    <form action="/admin/<% if(editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
            <label>Title</label>
            <br>
            <input type="text" name="title" placeholder="Quantum Theory Book" value="<% if(editing) { %><%= product.title %><% } %>" required>
            <br>
            <label>Price</label>
            <br>
            <input type="number" step="0.01" min="0" name="price" placeholder="19.99" value="<% if(editing) { %><%= product.price %><% } %>" required>
            <br>
            <label>Description</label>
            <br>
            <textarea name="description" placeholder="Description" rows = "5" required><% if(editing) { %><%= product.description %><% } %></textarea>
            <br>
            <label>Image URL</label>
            <br>
            <input type="text" name="imageURL" placeholder="url of image" value="<% if(editing) { %><%= product.imageURL %><% } %>" required>
            <br>
            <% if(editing) { %>
                <input type="hidden" name="productId" value="<%= product._id %>">
            <% } %>
            <input type = "hidden" name = "_csrf" value="<%= csrfToken %>">
        <button type="submit"><% if(editing) { %>Update Product<% } else { %>Add product<% } %></button>
        </form>
    </main>

<%- include('../includes/end.ejs') %>