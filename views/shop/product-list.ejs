<%- include('../includes/head.ejs') %>

    <link rel="stylesheet" href="/css/shop.css">
    <link rel="stylesheet" href="/css/form.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>

    <main class="items">
        <% if(prods.length > 0){ %>
            <h1 class="main_heading">List of all products</h1>
            <br>
            <div class="grid">
                <% prods.forEach(function(product) { %>
                    <article class="card product_item">
                        <h1 class="card_header">
                            <p class="product_title"><%= product.title %></p>
                        </h1>
                        <hr>
                        <div class="card_image">
                            <img src="<%= product.imageURL %>" alt="<%= product.title %>">
                        </div>
                        <hr>
                        <h2 class="card_content">
                            <h1 class="product_price">$<%= product.price %></h1>
                            <h1 class="product_description"><%= product.description %></h1>
                        </h2>
                        <div class="card_actions">
                            <a href="/products/<%= product.id %>">Details</a>
                            <%- include('../includes/add-to-cart.ejs', {product : product}) %>
                        </div>
                    </article>
                <% }) %>
            </div>
        <% } else{ %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>


<%- include('../includes/end.ejs') %>  